{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
