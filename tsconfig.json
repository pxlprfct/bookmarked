{
  "compilerOptions": {
    "module": "es6",
    "target": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./dist",
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts",
    "src/test/"
  ]
}
