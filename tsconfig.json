{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./dist",
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDirs": ["src", "test"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "*.test.*"]
}
